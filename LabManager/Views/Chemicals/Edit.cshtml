@model LabManager.Models.Chemical

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Chemical</h1>

@*<h4>Chemical</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />

            <div class="form-group">
                <label asp-for="ID" class="control-label"></label>
                <div> @Html.DisplayFor(model => model.Name)</div>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReceivedDate" class="control-label"></label>
                <input asp-for="ReceivedDate" class="form-control" />
                <span asp-validation-for="ReceivedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpenDate" class="control-label"></label>
                <input asp-for="OpenDate" class="form-control" />
                @*<span asp-validation-for="OpenDate" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="ExpirationDate" class="control-label"></label>
                <input asp-for="ExpirationDate" class="form-control" />
                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="COA" class="control-label"></label>
                <input asp-for="COA" class="form-control" />
                <span asp-validation-for="COA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpenedBy" class="control-label"></label>
                <input asp-for="OpenedBy" class="form-control" />
                @*<span asp-validation-for="OpenedBy" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            @*********************************************************************************@
            @*Dropdowns:*@

            <div class="form-group">
                <label asp-for="ChemicalType" class="control-label"></label>
                <select asp-for="ChemicalTypeID" class="form-control" asp-items="ViewBag.ChemicalTypeID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Manufacturer" class="control-label"></label>
                <select asp-for="ManufacturerID" class="form-control" asp-items="ViewBag.ManufacturerID"></select>
            </div>

            <div class="form-group">
                <label asp-for="Employee" class="control-label"></label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
            </div>
            @*********************************************************************************@


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
